<Window x:Class="SpaceInvaders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceInvaders"
        mc:Ignorable="d"
        Title="Space Invaders Recreation" Height="500" Width="800" FocusManager.FocusedElement="{Binding ElementName=GameCanvas}">
    <Canvas Name="GameCanvas" Background="Black" Focusable="True" KeyDown="IsKeyDown" KeyUp="IsKeyUp">
        <Label Foreground="White" Name="EnemiesLeft" FontSize="16" FontWeight="Bold">Enemies Left: </Label>
        <Label Foreground="White" Name="ScoreLabel" FontSize="16" FontWeight="Bold" Canvas.Left="692" HorizontalAlignment="Left" VerticalAlignment="Center">Score: </Label>
        <Rectangle Name="PlayerRec" Fill="White" Height="65" Width="55" Canvas.Left="568" Canvas.Top="394" />
    </Canvas>
</Window>
