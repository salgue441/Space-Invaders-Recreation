<Window x:Class="SpaceInvaders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceInvaders"
        mc:Ignorable="d"
        Title="Space Invaders Recreation" Height="720" Width="1200" FocusManager.FocusedElement="{Binding ElementName=GameCanvas}">
    <Canvas Name="GameCanvas" Background="Black" Focusable="True" KeyDown="IsKeyDown" KeyUp="IsKeyUp">
        <Label Foreground="White" Name="EnemiesLeft" FontSize="16" FontWeight="Bold">Enemies Left:</Label>
        <Label Foreground="White" Name="PlayersLives" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" Canvas.Left="574" VerticalAlignment="Center">Lives:</Label>
        <Label Foreground="White" Name="ScoreLabel" FontSize="16" FontWeight="Bold" Canvas.Left="1079" HorizontalAlignment="Left" VerticalAlignment="Center">Score:</Label>
        <Rectangle Name="PlayerRec" Fill="White" Height="65" Width="55" Canvas.Left="550" Canvas.Top="610" />
    </Canvas>
</Window>
